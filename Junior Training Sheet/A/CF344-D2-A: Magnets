#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n;

    cin >> n;

    string previous = "";
    string current;
    int groups = 0;

    while (n--)
    {
        cin >> current;

        if (current != previous)
        {
            groups++;
        }

        previous = current;
    }

    cout << groups << endl;
    return 0;
}
